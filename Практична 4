import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

/*


  üë®‚Äçüíª –î–Ü–ê–ì–†–ê–ú–ê –ö–õ–ê–°–Ü–í (Mermaid Syntax)

  classDiagram
      %% –Ü—î—Ä–∞—Ä—Ö—ñ—è 1: –õ—é–¥–∏
      class Person {
          #String name
          #int age
          +displayInfo()
          +performAction()
          +getDetails()
      }
      class Student {
          -String studentId
          +displayInfo()
          +performAction()
          +getDetails()
      }
      class Teacher {
          -String department
          +displayInfo()
          +performAction()
          +getDetails()
      }

      %% –Ü—î—Ä–∞—Ä—Ö—ñ—è 2: –ü—É–±–ª—ñ–∫–∞—Ü—ñ—ó
      class Publication {
          #String title
          #int year
          +displayInfo()
          +performAction()
          +getDetails()
      }
      class Book {
          -String author
          +displayInfo()
          +performAction()
          +getDetails()
      }
      class JournalArticle {
          -String journalName
          +displayInfo()
          +performAction()
          +getDetails()
      }

      %% –Ü—î—Ä–∞—Ä—Ö—ñ—è 3: –ü—ñ–¥—Ä–æ–∑–¥—ñ–ª–∏
      class UniversityUnit {
          #String unitName
          +displayInfo()
          +performAction()
          +getDetails()
      }
      class Department {
          -List~String~ courses
          +displayInfo()
          +performAction()
          +getDetails()
      }
      class Faculty {
          -List~String~ departments
          +displayInfo()
          +performAction()
          +getDetails()
      }

      Person <|-- Student
      Person <|-- Teacher
      Publication <|-- Book
      Publication <|-- JournalArticle
      UniversityUnit <|-- Department
      UniversityUnit <|-- Faculty


*/

// ======================= –Ü–Ñ–†–ê–†–•–Ü–Ø 1: –õ–Æ–î–ò =======================

/**
 * üéì –ë–∞—Ç—å–∫—ñ–≤—Å—å–∫–∏–π –∫–ª–∞—Å –¥–ª—è –ª—é–¥–µ–π –≤ —É–Ω—ñ–≤–µ—Ä—Å–∏—Ç–µ—Ç—ñ.
 * –ü–æ–ª—è `name` —Ç–∞ `age` –º–∞—é—Ç—å –¥–æ—Å—Ç—É–ø `protected`.
 */
class Person {
    protected String name;
    protected int age;

    // –ü–æ–ª–µ –∑ –¥–æ—Å—Ç—É–ø–æ–º package-private (–∑–∞ –∑–∞–º–æ–≤—á—É–≤–∞–Ω–Ω—è–º)
    String packagePrivateAccessDemo = "–î–æ—Å—Ç—É–ø–Ω–æ –≤ –º–µ–∂–∞—Ö –ø–∞–∫–µ—Ç—É";

    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    // –ú–µ—Ç–æ–¥ ‚Ññ1 –¥–ª—è –ø–µ—Ä–µ–≤–∏–∑–Ω–∞—á–µ–Ω–Ω—è
    public void displayInfo() {
        System.out.println("–ö–ª–∞—Å Person | –Ü–º'—è: " + this.name + ", –í—ñ–∫: " + this.age);
    }

    // –ú–µ—Ç–æ–¥ ‚Ññ2 –¥–ª—è –ø–µ—Ä–µ–≤–∏–∑–Ω–∞—á–µ–Ω–Ω—è
    public void performAction() {
        System.out.println(this.name + " (Person) –≤–∏–∫–æ–Ω—É—î –∑–∞–≥–∞–ª—å–Ω—É –¥—ñ—é.");
    }
    
    // –ú–µ—Ç–æ–¥ ‚Ññ3 –¥–ª—è –ø–µ—Ä–µ–≤–∏–∑–Ω–∞—á–µ–Ω–Ω—è
    public String getDetails() {
        return "–î–µ—Ç–∞–ª—ñ –¥–ª—è Person: " + this.name;
    }
}

/**
 * üë®‚Äçüéì –ö–ª–∞—Å-–Ω–∞—â–∞–¥–æ–∫ "–°—Ç—É–¥–µ–Ω—Ç", —â–æ —Ä–æ–∑—à–∏—Ä—é—î "Person".
 */
class Student extends Person {
    private String studentId;

    public Student(String name, int age, String studentId) {
        super(name, age); // –í–∏–∫–ª–∏–∫ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –±–∞—Ç—å–∫—ñ–≤—Å—å–∫–æ–≥–æ –∫–ª–∞—Å—É
        this.studentId = studentId;
    }

    @Override
    public void displayInfo() {
        System.out.println("\n--- –Ü–Ω—Ñ–æ—Ä–º–∞—Ü—ñ—è –ø—Ä–æ –°—Ç—É–¥–µ–Ω—Ç–∞ ---");
        super.displayInfo(); // –í–∏–∫–ª–∏–∫ –º–µ—Ç–æ–¥—É –±–∞—Ç—å–∫—ñ–≤—Å—å–∫–æ–≥–æ –∫–ª–∞—Å—É
        System.out.println("ID –°—Ç—É–¥–µ–Ω—Ç–∞: " + this.studentId);
    }

    @Override
    public void performAction() {
        System.out.println(this.name + " (–°—Ç—É–¥–µ–Ω—Ç) —Å–∫–ª–∞–¥–∞—î —ñ—Å–ø–∏—Ç.");
    }
    
    @Override
    public String getDetails() {
        return "–°—Ç—É–¥–µ–Ω—Ç: " + this.name + ", ID: " + this.studentId;
    }
}

/**
 * üë©‚Äçüè´ –ö–ª–∞—Å-–Ω–∞—â–∞–¥–æ–∫ "–í–∏–∫–ª–∞–¥–∞—á", —â–æ —Ä–æ–∑—à–∏—Ä—é—î "Person".
 */
class Teacher extends Person {
    private String department;

    public Teacher(String name, int age, String department) {
        super(name, age);
        this.department = department;
    }

    @Override
    public void displayInfo() {
        System.out.println("\n--- –Ü–Ω—Ñ–æ—Ä–º–∞—Ü—ñ—è –ø—Ä–æ –í–∏–∫–ª–∞–¥–∞—á–∞ ---");
        super.displayInfo();
        System.out.println("–ö–∞—Ñ–µ–¥—Ä–∞: " + this.department);
    }

    @Override
    public void performAction() {
        System.out.println(this.name + " (–í–∏–∫–ª–∞–¥–∞—á) –ø—Ä–æ–≤–æ–¥–∏—Ç—å –ª–µ–∫—Ü—ñ—é.");
    }
    
    @Override
    public String getDetails() {
        return "–í–∏–∫–ª–∞–¥–∞—á: " + this.name + ", –ö–∞—Ñ–µ–¥—Ä–∞: " + this.department;
    }
}

// ======================= –Ü–Ñ–†–ê–†–•–Ü–Ø 2: –ü–£–ë–õ–Ü–ö–ê–¶–Ü–á =======================

class Publication {
    protected String title;
    protected int year;

    public Publication(String title, int year) {
        this.title = title;
        this.year = year;
    }

    public void displayInfo() {
        System.out.println("\n–ö–ª–∞—Å Publication | –ù–∞–∑–≤–∞: " + this.title + ", –†—ñ–∫: " + this.year);
    }
    public void performAction() { System.out.println("–ü—É–±–ª—ñ–∫–∞—Ü—ñ—è '" + this.title + "' –≤–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É—î—Ç—å—Å—è."); }
    public String getDetails() { return "–ü—É–±–ª—ñ–∫–∞—Ü—ñ—è: " + this.title; }
}

class Book extends Publication {
    private String author;

    public Book(String title, int year, String author) {
        super(title, year);
        this.author = author;
    }

    @Override
    public void displayInfo() {
        super.displayInfo();
        System.out.println("–¢–∏–ø: –ö–Ω–∏–≥–∞, –ê–≤—Ç–æ—Ä: " + this.author);
    }
    @Override
    public void performAction() { System.out.println("–ö–Ω–∏–≥—É '" + this.title + "' –≤–∑—è–ª–∏ –∑ –±—ñ–±–ª—ñ–æ—Ç–µ–∫–∏."); }
    @Override
    public String getDetails() { return "–ö–Ω–∏–≥–∞: " + this.title + ", –ê–≤—Ç–æ—Ä: " + this.author; }
}

class JournalArticle extends Publication {
    private String journalName;

    public JournalArticle(String title, int year, String journalName) {
        super(title, year);
        this.journalName = journalName;
    }
    
    @Override
    public void displayInfo() {
        super.displayInfo();
        System.out.println("–¢–∏–ø: –°—Ç–∞—Ç—Ç—è, –ñ—É—Ä–Ω–∞–ª: " + this.journalName);
    }
    @Override
    public void performAction() { System.out.println("–°—Ç–∞—Ç—Ç—é '" + this.title + "' —Ü–∏—Ç—É—é—Ç—å —É –¥–æ—Å–ª—ñ–¥–∂–µ–Ω–Ω—ñ."); }
    @Override
    public String getDetails() { return "–°—Ç–∞—Ç—Ç—è: " + this.title + ", –ñ—É—Ä–Ω–∞–ª: " + this.journalName; }
}

// ======================= –Ü–Ñ–†–ê–†–•–Ü–Ø 3: –ü–Ü–î–†–û–ó–î–Ü–õ–ò =======================

class UniversityUnit {
    protected String unitName;

    public UniversityUnit(String unitName) { this.unitName = unitName; }

    public void displayInfo() { System.out.println("\n–ö–ª–∞—Å UniversityUnit | –ù–∞–∑–≤–∞: " + this.unitName); }
    public void performAction() { System.out.println("–ü—ñ–¥—Ä–æ–∑–¥—ñ–ª '" + this.unitName + "' –ø—Ä–æ–≤–æ–¥–∏—Ç—å –∑–±–æ—Ä–∏."); }
    public String getDetails() { return "–ü—ñ–¥—Ä–æ–∑–¥—ñ–ª: " + this.unitName; }
}

class Department extends UniversityUnit {
    private List<String> courses;

    public Department(String name, List<String> courses) {
        super(name);
        this.courses = courses;
    }
    @Override
    public void displayInfo() {
        super.displayInfo();
        System.out.println("–¢–∏–ø: –ö–∞—Ñ–µ–¥—Ä–∞, –ö—É—Ä—Å–∏: " + this.courses);
    }
    @Override
    public void performAction() { System.out.println("–ö–∞—Ñ–µ–¥—Ä–∞ '" + this.unitName + "' —Ä–æ–∑—Ä–æ–±–ª—è—î –Ω–∞–≤—á–∞–ª—å–Ω–∏–π –ø–ª–∞–Ω."); }
    @Override
    public String getDetails() { return "–ö–∞—Ñ–µ–¥—Ä–∞: " + this.unitName; }
}

class Faculty extends UniversityUnit {
    private List<String> departments;

    public Faculty(String name, List<String> departments) {
        super(name);
        this.departments = departments;
    }
    @Override
    public void displayInfo() {
        super.displayInfo();
        System.out.println("–¢–∏–ø: –§–∞–∫—É–ª—å—Ç–µ—Ç, –ö–∞—Ñ–µ–¥—Ä–∏: " + this.departments);
    }
    @Override
    public void performAction() { System.out.println("–§–∞–∫—É–ª—å—Ç–µ—Ç '" + this.unitName + "' –æ—Ä–≥–∞–Ω—ñ–∑–æ–≤—É—î –¥–µ–Ω—å –≤—ñ–¥–∫—Ä–∏—Ç–∏—Ö –¥–≤–µ—Ä–µ–π."); }
    @Override
    public String getDetails() { return "–§–∞–∫—É–ª—å—Ç–µ—Ç: " + this.unitName; }
}


/**
 * üöÄ –ì–æ–ª–æ–≤–Ω–∏–π –∫–ª–∞—Å –¥–ª—è –∑–∞–ø—É—Å–∫—É —Ç–∞ –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—ó
 */
public class Main {
    public static void main(String[] args) {
        // --- –°—Ç–≤–æ—Ä–µ–Ω–Ω—è –æ–±'—î–∫—Ç—ñ–≤ –¥–ª—è –≤—Å—ñ—Ö –∫–ª–∞—Å—ñ–≤ ---
        Student student = new Student("–Ü–≤–∞–Ω –ü–µ—Ç—Ä–µ–Ω–∫–æ", 20, "IT12345");
        Teacher teacher = new Teacher("–û–ª—å–≥–∞ –ö–æ–≤–∞–ª—å—á—É–∫", 45, "–ü—Ä–æ–≥—Ä–∞–º–Ω–æ—ó —ñ–Ω–∂–µ–Ω–µ—Ä—ñ—ó");
        Book book = new Book("–ß–∏—Å—Ç–∏–π –∫–æ–¥", 2008, "–†–æ–±–µ—Ä—Ç –ú–∞—Ä—Ç—ñ–Ω");
        JournalArticle article = new JournalArticle("–ê–ª–≥–æ—Ä–∏—Ç–º–∏ —Å–æ—Ä—Ç—É–≤–∞–Ω–Ω—è", 2022, "–ù–∞—É–∫–æ–≤–∏–π –≤—ñ—Å–Ω–∏–∫");
        Department department = new Department("–ö–∞—Ñ–µ–¥—Ä–∞ –ü–Ü", Arrays.asList("–û–û–ü", "–ë–∞–∑–∏ –¥–∞–Ω–∏—Ö"));
        Faculty faculty = new Faculty("–§–∞–∫—É–ª—å—Ç–µ—Ç –Ü–¢", Arrays.asList("–ü–Ü", "–ö–ù", "–ö–Ü"));

        System.out.println("================= –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—è –ü–æ–ª—ñ–º–æ—Ä—Ñ—ñ–∑–º—É=================\n");

        // --- –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—è –ø–æ–ª—ñ–º–æ—Ä—Ñ—ñ–∑–º—É –¥–ª—è —ñ—î—Ä–∞—Ä—Ö—ñ—ó Person ---
        System.out.println("---------- –Ü—î—Ä–∞—Ä—Ö—ñ—è Person ----------");
        List<Person> people = new ArrayList<>();
        people.add(student);
        people.add(teacher);
        for (Person person : people) {
            person.displayInfo();
            person.performAction();
            System.out.println("–î–µ—Ç–∞–ª—ñ: " + person.getDetails());
        }

        // --- –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—è –ø–æ–ª—ñ–º–æ—Ä—Ñ—ñ–∑–º—É –¥–ª—è —ñ—î—Ä–∞—Ä—Ö—ñ—ó Publication ---
        System.out.println("\n---------- –Ü—î—Ä–∞—Ä—Ö—ñ—è Publication ----------");
        List<Publication> publications = Arrays.asList(book, article);
        for (Publication pub : publications) {
            pub.displayInfo();
            pub.performAction();
        }

        // --- –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—è –ø–æ–ª—ñ–º–æ—Ä—Ñ—ñ–∑–º—É –¥–ª—è —ñ—î—Ä–∞—Ä—Ö—ñ—ó UniversityUnit ---
        System.out.println("\n---------- –Ü—î—Ä–∞—Ä—Ö—ñ—è UniversityUnit ----------");
        List<UniversityUnit> units = Arrays.asList(department, faculty);
        for (UniversityUnit unit : units) {
            unit.displayInfo();
            unit.performAction();
        }

        System.out.println("\n\n============–î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—è –°–ø–µ—Ü–∏—Ñ—ñ–∫–∞—Ç–æ—Ä—ñ–≤ –î–æ—Å—Ç—É–ø—É============\n");
        
        // 1. –î–æ—Å—Ç—É–ø –¥–æ package-private –ø–æ–ª—è –≤ –º–µ–∂–∞—Ö –æ–¥–Ω–æ–≥–æ "–ø–∞–∫–µ—Ç—É" (—Ñ–∞–π–ª—É)
        // –¶–µ–π –∫–æ–¥ –ø—Ä–∞—Ü—é—î, –æ—Å–∫—ñ–ª—å–∫–∏ Main —ñ Person –∑–Ω–∞—Ö–æ–¥—è—Ç—å—Å—è –≤ –æ–¥–Ω–æ–º—É "–ø–∞–∫–µ—Ç—ñ".
        System.out.println("‚úÖ –î–æ—Å—Ç—É–ø –¥–æ package-private –ø–æ–ª—è –∑ –∫–ª–∞—Å—É Main: –£–°–ü–Ü–®–ù–û.");
        System.out.println("   –ó–Ω–∞—á–µ–Ω–Ω—è –ø–æ–ª—è: \"" + student.packagePrivateAccessDemo + "\"");
        
        // 2. –°–∏–º—É–ª—è—Ü—ñ—è –¥–æ—Å—Ç—É–ø—É –∑ —ñ–Ω—à–æ–≥–æ –ø–∞–∫–µ—Ç—É.
        // –Ø–∫–±–∏ –∫–ª–∞—Å ExternalService –±—É–≤ —É —Ñ–∞–π–ª—ñ –≤ —ñ–Ω—à–æ–º—É –ø–∞–∫–µ—Ç—ñ,
        // —Ä—è–¥–æ–∫ `person.packagePrivateAccessDemo` –≤–∏–∫–ª–∏–∫–∞–≤ –±–∏ –ü–û–ú–ò–õ–ö–£ –ö–û–ú–ü–Ü–õ–Ø–¶–Ü–á.
        System.out.println("\n‚ùå –°–∏–º—É–ª—è—Ü—ñ—è –¥–æ—Å—Ç—É–ø—É –∑ —ñ–Ω—à–æ–≥–æ –ø–∞–∫–µ—Ç—É:");
        System.out.println("   –ü–æ—è—Å–Ω–µ–Ω–Ω—è: –Ø–∫–±–∏ –∫–ª–∞—Å ExternalService –±—É–≤ –≤ —ñ–Ω—à–æ–º—É –ø–∞–∫–µ—Ç—ñ, –¥–æ—Å—Ç—É–ø –¥–æ package-private –ø–æ–ª—è –±—É–≤ –±–∏ –Ω–µ–º–æ–∂–ª–∏–≤–∏–π.");
    }
}
